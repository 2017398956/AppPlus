<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
        <com.jenzz.materialpreference.PreferenceCategory
            android:title="@string/category_advanced"
            android:key="@string/category_advanced_key">

        <com.jenzz.materialpreference.CheckBoxPreference
            android:title="@string/switch_preference_show_self_title"
            android:key="@string/switch_preference_key_show_self"
            android:summaryOn="@string/switch_preference_show_self_on"
            android:summaryOff="@string/switch_preference_show_self_off"/>

        <com.jenzz.materialpreference.CheckBoxPreference
            android:title="@string/switch_preference_list_item_brief_mode"
            android:key="@string/switch_preference_key_list_item_brief_mode"
            android:defaultValue="true"
            android:summaryOn="@string/switch_preference_list_item_brief_mode_on"
            android:summaryOff="@string/switch_preference_list_item_brief_mode_off"/>

        <com.jenzz.materialpreference.Preference
            android:title="@string/preference_title_theme_primary"
            android:summary="@string/preference_summary_theme_primary"
            android:key="@string/preference_key_theme_primary"/>

    </com.jenzz.materialpreference.PreferenceCategory>
</PreferenceScreen>