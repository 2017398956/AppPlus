<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/list_item_icon_size"
        android:layout_height="@dimen/list_item_icon_size"
        android:layout_marginRight="16dp"/>

    <LinearLayout
        android:id="@+id/ll_app_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_icon"
        android:layout_toLeftOf="@+id/iv_over_flow"
        android:orientation="vertical">
        <TextView
            android:id="@android:id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?title_text"
            android:singleLine="true"
            android:textAppearance="?attr/textAppearanceListItem"/>

        <TextView
            android:id="@android:id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?body_text"
            android:singleLine="true"
            android:textAppearance="?attr/textAppearanceListItemSmall"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/iv_over_flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/themeOverFlowDrawable"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:layout_marginLeft="8dp"
        android:padding="8dp"
        android:background="@drawable/selector_over_flow"/>
    </RelativeLayout>