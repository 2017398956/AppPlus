<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LightParent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="theme_color">@color/colorPrimary</item>
        <item name="theme_color_dark">@color/colorPrimaryDark</item>

        <item name="ic_menu_export">@drawable/ic_exit_to_app_black_24dp</item>
        <item name="ic_menu_share">@drawable/ic_share_black_24dp</item>
        <item name="ic_menu_open">@drawable/ic_open_with_black_24dp</item>

        <item name="ic_nav_menu_support">@drawable/ic_favorite_black_24dp</item>
        <item name="ic_nav_menu_theme">@drawable/ic_color_lens_black_24dp</item>
        <item name="ic_nav_menu_setting">@drawable/ic_settings_black_24dp</item>
        <item name="ic_nav_menu_opinion">@drawable/ic_email_black_24dp</item>
        <!-- app 主题颜色 不论是不是夜间模式，这个颜色值都是固定的 -->
        <item name="appColorPrimary">@color/colorPrimary</item>
        <item name="fits_windows">true</item>
    </style>

    <!--<style name="Theme_AppPlus_Dark_Parent" parent="Theme.AppCompat.NoActionBar">-->
    <style name="DarkParent" parent="Theme.AppCompat.NoActionBar">
        <item name="theme_color">@color/colorPrimary</item>
        <item name="theme_color_dark">@color/colorPrimaryDark</item>

        <item name="ic_menu_export">@drawable/ic_exit_to_app_white_24dp</item>
        <item name="ic_menu_share">@drawable/ic_share_white_24dp</item>
        <item name="ic_menu_open">@drawable/ic_open_with_white_24dp</item>

        <item name="ic_nav_menu_support">@drawable/ic_favorite_white_24dp</item>
        <item name="ic_nav_menu_theme">@drawable/ic_color_lens_white_24dp</item>
        <item name="ic_nav_menu_setting">@drawable/ic_settings_white_24dp</item>
        <item name="ic_nav_menu_opinion">@drawable/ic_email_white_24dp</item>
        <!-- app 主题颜色 -->
        <item name="appColorPrimary">@color/colorPrimary</item>
        <item name="fits_windows">true</item>
    </style>

</resources>