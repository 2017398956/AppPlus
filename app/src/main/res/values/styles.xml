<resources>


    <style name="ThemeLightAppPlus" parent="@style/LightParent">
        <item name="themeOverFlowDrawable">@drawable/ic_overflow_dark</item>
        <item name="title_text">@android:color/black</item>
        <item name="body_text">#303030</item>
        <item name="colorPrimary">?attr/theme_color</item>
        <item name="colorPrimaryDark">?attr/theme_color_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeDarkAppPlus" parent="@style/DarkParent">
        <item name="themeOverFlowDrawable">@drawable/ic_overflow</item>
        <item name="title_text">@android:color/white</item>
        <item name="body_text">#b4b4b4</item>
        <item name="colorPrimary">?attr/theme_color</item>
        <item name="colorPrimaryDark">?attr/theme_color_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- 正常主题-->
    <style name="Theme_AppPlus" parent="@style/ThemeLightAppPlus"/>
    <!-- 夜间模式-->
    <style name="Theme_AppPlus_Dark" parent="@style/ThemeDarkAppPlus"/>

</resources>
